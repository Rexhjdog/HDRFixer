<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HDRFixer.App.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:HDRFixer.App.ViewModels">
    <ScrollViewer Padding="24">
        <StackPanel Spacing="16">
            <TextBlock Text="{x:Bind ViewModel.Title}" Style="{StaticResource TitleTextBlockStyle}" />

            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="Application" Style="{StaticResource SubtitleTextBlockStyle}" />
                    <ToggleSwitch Header="Run at Startup" IsOn="{x:Bind ViewModel.RunAtStartup, Mode=TwoWay}" />
                    <ToggleSwitch Header="Minimize to Tray" IsOn="{x:Bind ViewModel.MinimizeToTray, Mode=TwoWay}" />
                </StackPanel>
            </Border>

            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="Background Service" Style="{StaticResource SubtitleTextBlockStyle}" />
                    <ToggleSwitch Header="Enable Background Service" IsOn="{x:Bind ViewModel.EnableBackgroundService, Mode=TwoWay}" />
                    <ToggleSwitch Header="Enable Fix Watchdog" IsOn="{x:Bind ViewModel.EnableFixWatchdog, Mode=TwoWay}"
                                  ToolTipService.ToolTip="Automatically re-applies fixes if Windows reverts them" />
                </StackPanel>
            </Border>

            <TextBlock Text="HDRFixer v2.0.0" HorizontalAlignment="Center" Opacity="0.5" Margin="0,32,0,0" />
        </StackPanel>
    </ScrollViewer>
</Page>

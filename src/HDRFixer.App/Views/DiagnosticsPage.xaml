<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HDRFixer.App.Views.DiagnosticsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer Padding="24">
        <StackPanel Spacing="16">
            <TextBlock Text="Diagnostics" Style="{StaticResource TitleTextBlockStyle}" />
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Run Full Diagnostic" Click="RunDiagnostic_Click" />
                <Button Content="Export Report" Click="ExportReport_Click" />
                <Button Content="Clear Report" Click="ClearReport_Click" />
            </StackPanel>
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20">
                <TextBlock x:Name="DiagnosticOutput" Text="Click 'Run Full Diagnostic' to scan your system." TextWrapping="Wrap" FontFamily="Consolas" />
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>

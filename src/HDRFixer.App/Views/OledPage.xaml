<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HDRFixer.App.Views.OledPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:HDRFixer.App.ViewModels">
    <ScrollViewer Padding="24">
        <StackPanel Spacing="16">
            <TextBlock Text="{x:Bind ViewModel.Title}" Style="{StaticResource TitleTextBlockStyle}" />

            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="Burn-in Prevention" Style="{StaticResource SubtitleTextBlockStyle}" />
                    <ToggleSwitch Header="Pixel Shift" IsOn="{x:Bind ViewModel.PixelShiftEnabled, Mode=TwoWay}"
                                  ToolTipService.ToolTip="Periodically shifts the display by a few pixels to prevent static image retention" />
                    <ToggleSwitch Header="Auto-hide Taskbar" IsOn="{x:Bind ViewModel.AutoHideTaskbar, Mode=TwoWay}" />
                    <ToggleSwitch Header="Enforce Dark Mode" IsOn="{x:Bind ViewModel.DarkModeEnforced, Mode=TwoWay}" />
                </StackPanel>
            </Border>

            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20">
                <StackPanel Spacing="8">
                    <TextBlock Text="Panel Usage" Style="{StaticResource SubtitleTextBlockStyle}" />
                    <TextBlock Text="Estimated cumulative HDR usage since last refresh:" Opacity="0.7" />
                    <TextBlock Text="{x:Bind ViewModel.UsageTimeText, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>

<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HDRFixer.App.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer Padding="24">
        <StackPanel Spacing="16">
            <TextBlock Text="Dashboard" Style="{StaticResource TitleTextBlockStyle}" />
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20">
                <StackPanel Spacing="8">
                    <TextBlock Text="Display Status" Style="{StaticResource SubtitleTextBlockStyle}" />
                    <TextBlock x:Name="DisplayNameText" Text="Detecting..." />
                    <TextBlock x:Name="HdrStatusText" />
                    <TextBlock x:Name="PeakLuminanceText" />
                    <TextBlock x:Name="GpuInfoText" />
                </StackPanel>
            </Border>
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20">
                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <TextBlock Text="Health Score" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <ProgressRing x:Name="HealthRing" IsIndeterminate="False" Value="0" Width="120" Height="120" />
                    <TextBlock x:Name="HealthLabelText" Text="Checking..." HorizontalAlignment="Center" Style="{StaticResource BodyStrongTextBlockStyle}" />
                </StackPanel>
            </Border>
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Fix All" Style="{StaticResource AccentButtonStyle}" Click="FixAll_Click" />
                <Button Content="Diagnose" Click="Diagnose_Click" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

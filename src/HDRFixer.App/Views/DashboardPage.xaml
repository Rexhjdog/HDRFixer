<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HDRFixer.App.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:HDRFixer.App.ViewModels">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="16">
            <TextBlock Text="{x:Bind ViewModel.Title}" Style="{StaticResource TitleTextBlockStyle}" />

            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20">
                <StackPanel Spacing="8">
                    <TextBlock Text="Display Status" Style="{StaticResource SubtitleTextBlockStyle}" />
                    <TextBlock Text="{x:Bind ViewModel.DisplayName, Mode=OneWay}" />
                    <TextBlock Text="{x:Bind ViewModel.HdrStatus, Mode=OneWay}" />
                    <TextBlock Text="{x:Bind ViewModel.PeakLuminanceText, Mode=OneWay}" />
                    <TextBlock Text="{x:Bind ViewModel.GpuInfo, Mode=OneWay}" />
                </StackPanel>
            </Border>

            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20">
                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <TextBlock Text="Health Score" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <ProgressRing Value="{x:Bind ViewModel.HealthScore, Mode=OneWay}" IsIndeterminate="False" Width="120" Height="120" />
                    <TextBlock Text="{x:Bind ViewModel.HealthLabel, Mode=OneWay}" HorizontalAlignment="Center" Style="{StaticResource BodyStrongTextBlockStyle}" />
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Fix All" Style="{StaticResource AccentButtonStyle}" Command="{x:Bind ViewModel.FixAllCommand}" />
                <Button Content="Refresh" Command="{x:Bind ViewModel.RefreshCommand}" />
            </StackPanel>

            <ProgressBar IsIndeterminate="True" Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>
    </ScrollViewer>
</Page>

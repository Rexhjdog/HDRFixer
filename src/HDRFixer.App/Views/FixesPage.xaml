<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HDRFixer.App.Views.FixesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer Padding="24">
        <StackPanel Spacing="16">
            <TextBlock Text="HDR Fixes" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock Text="Apply and manage HDR correction fixes" Style="{StaticResource BodyTextBlockStyle}" Opacity="0.7" />

            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20">
                <StackPanel Spacing="8">
                    <TextBlock Text="SDR Tone Curve Correction" Style="{StaticResource SubtitleTextBlockStyle}" />
                    <TextBlock Text="Replaces piecewise sRGB with gamma 2.2 for correct SDR rendering in HDR mode" TextWrapping="Wrap" Opacity="0.7" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Apply" Click="ApplyGammaFix_Click" />
                        <Button Content="Revert" Click="RevertGammaFix_Click" />
                        <TextBlock x:Name="GammaFixStatus" VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20">
                <StackPanel Spacing="8">
                    <TextBlock Text="SDR Brightness Optimization" Style="{StaticResource SubtitleTextBlockStyle}" />
                    <TextBlock Text="Set optimal SDR reference white level for your display" TextWrapping="Wrap" Opacity="0.7" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Slider x:Name="BrightnessSlider" Minimum="80" Maximum="500" Value="200" Width="300" />
                        <TextBlock x:Name="BrightnessLabel" Text="200 nits" VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20">
                <StackPanel Spacing="8">
                    <TextBlock Text="Pixel Format Verification" Style="{StaticResource SubtitleTextBlockStyle}" />
                    <TextBlock Text="Verify GPU output is RGB Full 10-bit" TextWrapping="Wrap" Opacity="0.7" />
                    <TextBlock x:Name="PixelFormatStatus" Text="Not checked" />
                </StackPanel>
            </Border>

            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20">
                <StackPanel Spacing="8">
                    <TextBlock Text="ICC Profile Conflict Resolution" Style="{StaticResource SubtitleTextBlockStyle}" />
                    <TextBlock Text="Detect and resolve conflicting color profiles" TextWrapping="Wrap" Opacity="0.7" />
                    <TextBlock x:Name="IccStatus" Text="Not checked" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
